<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".vehicleregisterpic">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Photo  of  your  vehicle  registration  (FRONT SIDE)"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/regis_front_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/vehicleregisfront"
        android:contentDescription="Registration Front Image"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/add_photo_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a photo"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:padding="6dp"
        android:background="@drawable/rectangleshape"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo  of  your  vehicle  registration   (BACK SIDE)"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/regis_back_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/vehicleregisback"
        android:scaleType="centerCrop"
        android:contentDescription="Registration Back Image"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/add_photo_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a photo"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:padding="6dp"
        android:background="@drawable/rectangleshape"
        android:textColor="@color/black" />



    <!-- Next Button -->
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Next"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangleshape"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />

</LinearLayout>