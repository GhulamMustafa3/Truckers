<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:background="@color/gray"
        android:fontFamily="@font/robotoitalic"
        android:padding="20dp"

        android:textColor="@color/black"
        android:text="My Profile" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">




        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            app:cardCornerRadius="230dp">

            <FrameLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <!-- Main Image -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/defaultprofileimg"
                    android:scaleType="centerCrop"

                    android:contentDescription="Profile Image" />

                <!-- Edit Icon -->
                <ImageView
                    android:id="@+id/editIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/baseline_edit_24"
                    android:contentDescription="Edit Image"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/username"
            android:hint="username"
            android:padding="10dp"
            android:background="@drawable/rectangleshape"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/email"
            android:hint="Email"
            android:padding="10dp"
            android:background="@drawable/rectangleshape"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/phone"
            android:hint="Phone"
            android:padding="10dp"
            android:background="@drawable/rectangleshape"
            />
        <Button
            android:id="@+id/signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_marginTop="24dp"
            android:background="@drawable/rectangleshape"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="12dp" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch Profile"
        android:padding="13dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/Shipper_Broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipper or Broker"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangleshape"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="12dp" />

</LinearLayout>