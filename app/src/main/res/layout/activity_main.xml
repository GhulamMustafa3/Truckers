<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/logistics"
        android:src="@drawable/logistics"/>
    <!-- First Card -->
    <LinearLayout
        android:id="@+id/first_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp"
        android:background="@drawable/rectangleshape"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DriverRegistration"
                android:text="DRIVER or MOTOR CARRIER"
                android:clickable="true"
                android:focusable="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I transport goods with a truck"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Second Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp"
        android:id="@+id/second_card"
        android:background="@drawable/rectangleshape"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipper or Shipper Company"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/ShipperRegistration"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have freight to be delivered"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>
</LinearLayout>


