<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".vehiclephoto">
    <!-- Driving License Title -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo  of  Your  Vehicle "
        android:textColor="#000000"
        android:layout_marginTop="26dp" />

    <!-- Driving License Image -->
    <ImageView
        android:id="@+id/truck_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/truck"
        android:scaleType="centerCrop"
        android:contentDescription="Driving License Image"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF" />

    <!-- Add Photo Button -->
    <Button
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a photo"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/rectangleshape"
        android:textColor="@color/black" />

    <!-- Next Button -->
    <Button
        android:id="@+id/next_button_vehicle_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangleshape"
        android:textColor="@color/black"
        android:padding="12dp" />

</LinearLayout>